{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "routes",
    "lib",
    "test"
  ],
  "compileOnSave": true
}
